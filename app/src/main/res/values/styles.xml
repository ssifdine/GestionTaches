<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style personnalisé pour la Toolbar -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/accent</item>
    </style>

    <!-- Style personnalisé pour les Dialogs -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">50%</item>
        <item name="android:background">@drawable/dialog_background</item> <!-- Reference drawable here -->
    </style>

    <!-- Animation de transition pour le dialog -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item> <!-- Animation entrée -->
        <item name="android:windowExitAnimation">@anim/fade_out</item> <!-- Animation sortie -->
    </style>

    <style name="CircularImage">
        <item name="shapeAppearanceOverlay">@style/CircularShape</item>
    </style>

    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>
